{{>header}}
<div class="bg">
    <p class="desc">My Booking Section</p>
</div>

<div class="container">
    {{#if bookings}}
    <h2 class="text-center my-4 font-weight-bold">Your Booking Detail</h2>
    {{#each bookings}}
    <div class="room-list">
        <div class="room-detail">
            <img src="{{room.pic}}" alt="">
            <div class="room-content">
                <div class="title">Room: {{room.title}}</div>
                <small class="description">Description:{{room.description}}</small><br>
                <small class="location">Location: {{room.location}}</small><br>
                <small class="price">Total Price: ${{book.total}} CAD</small><br>
                <small class="checkIn">Date: {{book.formattedCheckIn}} - {{book.formattedCheckOut}}</small>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h3 class="mt-3 text-center">You do not have any bookings yet</h3>
{{/if}}

{{>footer}}