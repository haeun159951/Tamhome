{{> header}}
<div class="bg">
    <p class="desc">Admin</p>
</div>
{{!-- ADD / EDIT Room part  --}}
<div class="container room-line mt-4">
    {{#each message}}
    <div class="errors">{{this}}</div>
    {{/each}}
    <form action="/room/{{#if edit}}edit{{else}}add{{/if}}" method="POST" enctype="multipart/form-data" id="createRoom">
        <h3 class="text-center">{{#if edit}}Edit {{else}}Add{{/if}} a room
        </h3>
        <input hidden id="room_id" class="form-control" value="{{room._id}}" name="room_id" type="text" />
        <div class="row">
            <div class="form-group col">
                <label for="title">Room Title</label>
                <input id="title" class="form-control" value="{{room.title}}" name="title" type="text" required />
            </div>
            <div class="form-group col">
                <label for="description">Description</label>
                <textarea id="description" class="form-control" value="{{room.description}}" name="description"
                    type="text" required />{{room.description}}</textarea>
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="location">Location</label>
                <input id="location" class="form-control" value="{{room.location}}" name="location" type="text"
                    required />
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="pic">Photo Upload</label>
                <input type="file" class="form-control" id="pic" value="{{room.pic}}" name="pic" required />
            </div>
            <div class="form-group col">
                <label for="price"> Price</label>
                <input id="price" class="form-control" value="{{room.price}}" name="price" type="text"
                    placeholder="e.g $100" required />
            </div>
        </div>

        <div class="mx-auto d-block mb-2">
            <button type="submit" class="btn btn-primary">{{#if edit}}Edit {{else}}Add {{/if}}</button>
        </div>
    </form>
</div>

{{> footer}}