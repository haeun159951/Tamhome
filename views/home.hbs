{{>header}}
<section class="header">
  <h1>Book unique places to stay and things to do</h1>
  <div class="container">
    <form class="form-booking">
      <div id="form">
        <div class="place">
          <label>Where</label>
          <select class="location form-control" id="searchLocation" name="location">
            <option value="">Choose a city</option>
            {{#each locations}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>
        <div class="input-grp">
          <label>Check-in</label>
          <input type="date" class="form-control select-date" />
        </div>

        <div class="input-grp">
          <label>Check-out</label>
          <input type="date" class="form-control select-date" />
        </div>

        <div class="guest">
          <label>Guests</label>
          <input min="1" type="number" class="form-control" placeholder="Add guests" />
        </div>

        <div class="input-grp">
          <button type="button" id="roomSearch" class="btn btn-primary">
            Search
          </button>
        </div>
      </div>
    </form>
  </div>
</section>

